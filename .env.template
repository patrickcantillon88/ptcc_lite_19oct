# PTCC Environment Configuration Template
# Copy this file to .env and fill in your values

# ==================== Database Configuration ====================
DATABASE_URL=postgresql://user:password@localhost:5432/ptcc_db
# Or for SQLite (development):
# DATABASE_URL=sqlite:///./ptcc.db

# ==================== LLM API Keys ====================
# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==================== Default LLM Settings ====================
DEFAULT_LLM_PROVIDER=gemini
DEFAULT_LLM_MODEL=gemini-2.5-flash-exp
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048

# ==================== System Configuration ====================
LOG_LEVEL=INFO
LOG_FILE=ptcc.log

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION_HOURS=24

# ==================== Feature Flags ====================
ENABLE_ALIGNMENT_CHECKS=true
ENABLE_BIAS_DETECTION=true
ENABLE_GOVERNANCE_CHECKS=true
ENABLE_AUDIT_LOGGING=true

# ==================== Performance ====================
MAX_CONCURRENT_LLM_REQUESTS=5
REQUEST_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=3600

# ==================== Agent Configuration ====================
# Default agent settings
AGENT_DEFAULT_TEMPERATURE=0.7
AGENT_DEFAULT_MAX_TOKENS=2048
AGENT_MEMORY_ENABLED=true
AGENT_CONTEXT_WINDOW=4000

# ==================== Monitoring & Analytics ====================
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_COST_TRACKING=true
ENABLE_USAGE_ANALYTICS=true

# ==================== External Services ====================
# Email (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@ptcc.edu

# Storage (optional, for file uploads)
STORAGE_BACKEND=local
STORAGE_PATH=./storage

# ==================== Development Settings ====================
DEBUG=false
DEVELOPMENT_MODE=false
