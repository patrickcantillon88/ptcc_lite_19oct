{
  "name": "PTCC Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && cd backend && pip install -r requirements.txt && cd ../frontend/desktop-web && pip install -r requirements.txt && cd ../mobile-pwa && npm install",
  "forwardPorts": [8501, 5174, 8001],
  "portsAttributes": {
    "8501": {
      "label": "Streamlit Dashboard",
      "onAutoForward": "notify"
    },
    "5174": {
      "label": "Mobile PWA",
      "onAutoForward": "notify"
    },
    "8001": {
      "label": "Backend API",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}